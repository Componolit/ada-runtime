
project Test is

   for Source_Dirs use (".");
   for Object_Dir use "obj";
   for Create_Missing_Dirs use "True";
   for Languages use ("Ada", "Asm_CPP");
   for Target use "arm-eabi";
   for Main use ("main.adb");

   for Runtime ("Ada") use "../../../build/nrf52/obj";

   package Compiler is
      for Default_Switches ("Ada") use ("-gnatg", "-g", "-mthumb", "-ffunction-sections", "-fdata-sections");
      for Default_Switches ("Asm_CPP") use ("-g", "-mthumb", "-ffunction-sections", "-fdata-sections");
   end Compiler;

   package Linker is
      for Default_Switches ("Ada") use ("-Wl,--gc-sections", "-Wl,--print-memory-usage", "-T", "link.ld");
   end Linker;

   package Binder is
      for Default_Switches ("Ada") use ("-D1k");
   end Binder;

   package Ide is
      for Gnat use "arm-eabi-gnat";
      for Gnatlist use "arm-eabi-gnatls";
      for Debugger_Command use "arm-eabi-gdb";
      for Program_Host use ":3333";
      for Communication_Protocol use "remote";
      for Connection_Tool use "";
      for Connection_Config_File use "";
   end Ide;

end Test;
